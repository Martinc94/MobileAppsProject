<Page
    x:Class="Match_Tracker.soccerTracker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Match_Tracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/pitch.jpg"></ImageBrush>
        </Grid.Background>
        <Grid x:Name="HeaderGrid"  Background="GhostWhite" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0">
            <TextBlock FontSize="40" FontFamily="arial">Soccer Tracker</TextBlock>
        </Grid>

        <Grid x:Name="Team1Grid"  Background="GhostWhite" VerticalAlignment="top" HorizontalAlignment="Left" Margin="50,50,0,0">
            <TextBlock FontSize="40" FontFamily="arial" x:Name="teamOneName" Tapped="teamOneName_Tapped">Team One</TextBlock>

        </Grid>

        <Grid x:Name="Team2Grid"  Background="GhostWhite" VerticalAlignment="top" HorizontalAlignment="Right" Margin="0,50,50,0">
            <TextBlock FontSize="40" FontFamily="arial" x:Name="teamTwoName" Tapped="teamTwoName_Tapped" >Team Two</TextBlock>
        </Grid>
    </Grid>
</Page>
