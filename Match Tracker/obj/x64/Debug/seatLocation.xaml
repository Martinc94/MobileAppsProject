<Page
    x:Class="Match_Tracker.seatLocation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Match_Tracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/seats.jpg"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='1' x:Name="HeaderGrid" Grid.Row="0" Background="GhostWhite" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0">
            <TextBlock x:Uid="lblseatHeader" Text="title" FontSize="50" FontFamily="arial"></TextBlock>
        </Grid>

        <StackPanel Grid.Row="1">
            <Grid Grid.Row="1"  VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Grid Background="GhostWhite" Grid.Column="0" Grid.Row="0">
                <TextBlock Text="Enter stadium name:"></TextBlock>
             </Grid>
            <TextBox x:ConnectionId='4' x:Name="txtStad" Grid.Column="1" Grid.Row="0" Background="White" Height="32" Margin="0.333,0,0,0" VerticalAlignment="Top"></TextBox>

            <Grid Background="GhostWhite" Grid.Column="0" Grid.Row="1">
                <TextBlock Text="Coordinates:"></TextBlock>
            </Grid>
            <Grid Background="GhostWhite" Grid.Column="1" Grid.Row="1">
                <TextBlock x:ConnectionId='5' x:Name="txtCoordinates" Text="Initialising"></TextBlock>
            </Grid>
        </Grid>
            <Button x:ConnectionId='3' Content="Save" HorizontalAlignment="Center" Visibility="Visible" Background="DarkOrange" Margin="0,5,0,0"                         ></Button>
        </StackPanel>

        <ListView x:ConnectionId='2' x:Name="SeatListView" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            
                
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"  Background="White">
                        <TextBlock Text="Seat Data"  FontSize="20" FontFamily="arial" />
                    </StackPanel>
                
            
        </ListView>



    </Grid>
</Page>

